<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        app:cardCornerRadius="4dp"
        android:layout_margin="8dp"
        android:gravity="center">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:layout_margin="8dp"
    android:gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="30dp">
            <ImageView
                android:id="@+id/client_history_car_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="IMG"
                android:scaleType="centerCrop"
                android:src="@drawable/icon2"
                tools:ignore="HardcodedText" />
        </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/card_view_1"
                android:layout_alignEnd="@id/card_view_1"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="12dp">
                <ImageView
                    android:id="@+id/client_history_driver_image"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_profile"
                    android:contentDescription="IMG"
                    android:scaleType="centerCrop"
                    tools:ignore="HardcodedText" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/client_history_car_matricule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mat : "
                android:textColor="@color/black"
                android:layout_marginLeft="7dp"
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/client_history_driver_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Driver Name"
                android:layout_marginLeft="7dp"
                android:textColor="@color/colorPrimaryTransparent"
                />

            <TextView
                android:id="@+id/client_history_date_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:gravity="end"
                android:textSize="10sp"
                android:text="12-02-2021"
                android:textColor="@color/colorPrimaryTransparent" />

        </LinearLayout>

    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
