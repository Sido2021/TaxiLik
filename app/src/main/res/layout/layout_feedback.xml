<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/feedback_card_view_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="17dp">
            <ImageView
                android:id="@+id/feedback_user_image"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/ic_profile"
                android:contentDescription="IMG"
                android:scaleType="centerCrop"
                tools:ignore="HardcodedText" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/feedback_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@android:color/black"
                android:text="user name"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:orientation="vertical"
                android:background="@drawable/background_text_white_raduis8">
            <TextView
                android:id="@+id/feedback_text_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Nice taxi ! "/>
            <TextView
                android:id="@+id/feedback_text_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:gravity="end"
                android:textSize="12dp"
                android:text="20-02-2021"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>