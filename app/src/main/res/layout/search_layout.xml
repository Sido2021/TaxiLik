<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
>
    <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="4dp"
    android:background="@color/white"
    app:cardCornerRadius="8dp">
<RelativeLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/search_car_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/search_image_car"
        android:scaleType="centerCrop"
        android:contentDescription="IMG"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/search_driver_name"
        android:layout_width="match_parent"
        android:paddingStart="70dp"
        android:paddingEnd="0dp"
        android:text="user name"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_below="@id/search_car_image"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:background="@color/colorAccent"
        tools:ignore="HardcodedText" />
    <TextView
        android:id="@+id/search_car_matricule"
        android:layout_width="wrap_content"
        android:text="Mat :"
        android:textStyle="bold"
        android:layout_above="@id/search_driver_name"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:paddingBottom="2dp"
        android:layout_margin="4dp"
        android:paddingTop="2dp"
        android:background="@drawable/background_text_white"
        tools:ignore="HardcodedText" />
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        android:translationY="30dp"
        app:cardBackgroundColor="@android:color/white"
        android:layout_alignBottom="@id/search_car_image"
        app:cardCornerRadius="30dp">
        <ImageView
            android:id="@+id/search_driver_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_profile"
            android:contentDescription="IMG"
            android:scaleType="centerCrop"
            tools:ignore="HardcodedText" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>